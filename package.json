{
  "name": "webpack-pug-scss-boilerplate",
  "version": "1.0.0",
  "description": "Base para maquetar un nuevo proyecto web con PUG, SCSS, JS (ES6) usando webpack.",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=dev webpack-dev-server --hot --host 0.0.0.0",
    "start:prod": "cross-env NODE_ENV=production webpack-dev-server --hot --host 0.0.0.0",
    "build": "rimraf dist && cross-env NODE_ENV=dev webpack",
    "build:prod": "rimraf dist && cross-env NODE_ENV=production webpack -p"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/javipuche/webpack-pug-scss-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "webpack",
    "sass",
    "scss",
    "pug",
    "js",
    "es6"
  ],
  "author": "Javier Puche",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/javipuche/webpack-pug-scss-boilerplate/issues"
  },
  "homepage": "https://github.com/javipuche/webpack-pug-scss-boilerplate#readme",
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.39",
    "@babel/preset-env": "^7.0.0-beta.39",
    "babel-loader": "^8.0.0-beta.0",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.7",
    "css-mqpacker": "^6.0.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.6",
    "html-beautify-webpack-plugin": "^1.0.3",
    "html-loader": "^0.5.4",
    "html-webpack-plugin": "^2.30.1",
    "image-webpack-loader": "^3.4.2",
    "js-beautify": "^1.7.5",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.9",
    "postcss-pxtorem": "^4.0.1",
    "pug": "^2.0.0-rc.4",
    "pug-loader": "^2.3.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "script-ext-html-webpack-plugin": "^1.8.8",
    "style-loader": "^0.18.2",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "webpack": "^3.5.6",
    "webpack-dev-server": "^2.9.7",
    "webpack-merge": "^4.1.1"
  }
}
